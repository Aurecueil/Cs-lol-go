<UserControl x:Class="ModManager.ModCreatorUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="500"
             AllowDrop="True"
             DragOver="dropBorder_DragOver"
             Drop="dropBorder_Drop" xmlns:local="clr-namespace:ModManager"
             Background="#80000000">

    <Grid>
        <Border Width="500" Height="600"
                Background="#FF1E1E1E"
                CornerRadius="6"
                BorderBrush="{DynamicResource AccentBrush}"
                BorderThickness="2"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">

            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid Grid.RowSpan="2" x:Name="Block" Visibility="Collapsed" Grid.Row="1" Panel.ZIndex="999" Background="#78000000">

                </Grid>
                <Grid Grid.Row="1" Grid.RowSpan="2">
                    <Image x:Name="bg_img_border"
Opacity="0.1" 
       HorizontalAlignment="Center"
       VerticalAlignment="Center"
Stretch="UniformToFill"
Panel.ZIndex="0"/>
                </Grid>

                <!-- Top Bar -->
                <Border Grid.Row="0"
                        Background="{DynamicResource AccentBrush}"
                        CornerRadius="6,6,0,0">
                    <Grid>
                        <TextBlock Text="Create New Mod"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>

                        <Button x:Name="CloseButton"
                                Style="{StaticResource IconButtonStyle}"
                                ToolTip="Close"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="5"
                                Click="Cancel_Click">
                            <TextBlock Text="❌"
                                       Foreground="LightGray"
                                       Style="{StaticResource IconTextBlockStyle}"
                                       Margin="0,-4,0,0"/>
                        </Button>
                    </Grid>
                </Border>

                <!-- Content -->
                <StackPanel Grid.Row="1" Margin="15,0,15,2">
                    <Grid DockPanel.Dock="Right">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="375"/>
                            <RowDefinition Height="*"/>
                        </Grid.RowDefinitions>
                        <Border Background="Transparent"
                            CornerRadius="6" Grid.Row="0"
                            Padding="15"
                            Margin="0,0,0,0">
                            <ScrollViewer VerticalScrollBarVisibility="Auto">
                                <StackPanel>
                                    <TextBlock Text="Mod Information"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Margin="0,0,0,0"/>

                                    <!-- Name -->
                                    <Grid Margin="0,0,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                           Text="Name"
                                           Foreground="White"
                                           FontSize="14"
                                           VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1" Style="{StaticResource SearchTextBoxStyle}"
             local:PlaceholderService.Placeholder="Mod Name"
                                         x:Name="txtName"
                                         Margin="10,0,0,0"
                                         VerticalAlignment="Center"
                                         Foreground="White"
                                         Background="Transparent"
                                         BorderThickness="0,0,0,2"
                                         BorderBrush="#666"
                                         VerticalContentAlignment="Center"
                                         Padding="0,5,10,5" TextChanged="Name_input_changed"
                                         FontSize="14"
                                         CaretBrush="White"/>
                                    </Grid>
                                    <Grid Margin="0,0,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="111*"/>
                                        </Grid.ColumnDefinitions>
                                        
                                        <TextBlock Grid.Column="0"
                              Text="Mod Folder"
                              Foreground="White"
                              FontSize="14"
                              VerticalAlignment="Center" Height="19"/>
                                        <TextBox Grid.Column="1" Style="{StaticResource SearchTextBoxStyle}"
local:PlaceholderService.Placeholder="Mod Folder"
                            x:Name="txtModFolder"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0,0,0,2"
                            BorderBrush="#666"
                            VerticalContentAlignment="Center"
                            Padding="0,5,10,5"
                            FontSize="14"
                            CaretBrush="White"
                            TextChanged="ValidateModFolder" Height="31"/>
                                    </Grid>
                                    <!-- Author -->
                                    <Grid Margin="0,0,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                           Text="Author"
                                           Foreground="White"
                                           FontSize="14"
                                           VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1" Style="{StaticResource SearchTextBoxStyle}"
             local:PlaceholderService.Placeholder="Mod Author"
                                         x:Name="txtAuthor"
                                         Margin="10,0,0,0"
                                         VerticalAlignment="Center"
                                         Foreground="White"
                                         Background="Transparent"
                                         BorderThickness="0,0,0,2"
                                         BorderBrush="#666"
                                         VerticalContentAlignment="Center"
                                         Padding="0,5,10,5"
                                         FontSize="14"
                                         CaretBrush="White"/>
                                    </Grid>

                                    <!-- Version -->
                                    <Grid Margin="0,0,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                           Text="Version"
                                           Foreground="White"
                                           FontSize="14"
                                           VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1" Style="{StaticResource SearchTextBoxStyle}"
             local:PlaceholderService.Placeholder="Version"
                                         x:Name="txtVersion"
                                         Text="1.0.0"
                                         Margin="10,0,0,0"
                                         VerticalAlignment="Center"
                                         Foreground="White"
                                         Background="Transparent"
                                         BorderThickness="0,0,0,2"
                                         BorderBrush="#666"
                                         VerticalContentAlignment="Center"
                                         Padding="0,5,10,5"
                                         FontSize="14"
                                         CaretBrush="White"/>
                                    </Grid>

                                    <!-- Description -->
                                    <Grid Margin="0,0,0,0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="120"/>
                                            <ColumnDefinition Width="105*"/>
                                            <ColumnDefinition Width="211*"/>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Grid.Column="0"
                                           Text="Description"
                                           Foreground="White"
                                           FontSize="14"
                                           VerticalAlignment="Center"/>
                                        <TextBox Grid.Column="1" Style="{StaticResource SearchTextBoxStyle}"
             local:PlaceholderService.Placeholder="Description"
             x:Name="txtDescription"
             Margin="10,0,0,0"
             Foreground="White"
             Background="Transparent"
             BorderThickness="0,0,0,2"
             BorderBrush="#666"
             Padding="0,5,10,5"
             FontSize="14"
             CaretBrush="White"
             AcceptsReturn="True"
             TextWrapping="Wrap"
             VerticalAlignment="Center"
             MinHeight="30"
             TextChanged="txtDescription_TextChanged" Grid.ColumnSpan="2"/>
                                    </Grid>

                                    <!-- Heart and Home in same row -->
                                    <Grid Margin="0,0,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>

                                        <Grid Grid.Column="0" Margin="0,5,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0"
                                               Text="Heart"
                                               Foreground="White"
                                               FontSize="14" Padding="0,0,0,3"
                                               VerticalAlignment="Bottom"/>
                                            <TextBox Grid.Column="1"
                                             x:Name="txtHeart" Style="{StaticResource SearchTextBoxStyle}"
                                             Margin="10,0,0,0"
                                             VerticalAlignment="Center"
                                             Foreground="White"
                                             Background="Transparent"
                                             BorderThickness="0,0,0,2"
                                             BorderBrush="#666"
                                             VerticalContentAlignment="Center"
                                             Padding="0,5,10,5"
                                             FontSize="14"
                                             CaretBrush="White"/>
                                        </Grid>

                                        <Grid Grid.Row="1" Margin="0,5,0,5">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0"
                                               Text="Home"
                                               Foreground="White"
                                               FontSize="14"
                                               Padding="0,0,0,3"
                                               VerticalAlignment="Bottom"/>
                                            <TextBox Grid.Column="1"
                                             x:Name="txtHome" Style="{StaticResource SearchTextBoxStyle}"
                                             Margin="10,0,0,0"
                                             VerticalAlignment="Center"
                                             Foreground="White"
                                             Background="Transparent"
                                             BorderThickness="0,0,0,2"
                                             BorderBrush="#666"
                                             VerticalContentAlignment="Center"
                                             Padding="0,5,10,5"
                                             FontSize="14"
                                             CaretBrush="White"/>
                                        </Grid>
                                    </Grid>

                                    <Grid Margin="0,0,0,5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <Grid Grid.Column="0" Margin="0,0,8,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Row="0"
                              Text="Priority"
                              Foreground="White"
                              FontSize="14"
                                           Padding="0,0,0,3"
                                           VerticalAlignment="Bottom"/>
                                            <TextBox Grid.Column="1" Style="{StaticResource SearchTextBoxStyle}"
local:PlaceholderService.Placeholder="10" TextChanged="txtPriority_TextChanged"
                            x:Name="txtPriority"
                            Margin="10,0,0,0"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Background="Transparent"
                            BorderThickness="0,0,0,2"
                            BorderBrush="#666"
                            VerticalContentAlignment="Center"
                            Padding="0,5,10,5"
                            FontSize="14"
                            CaretBrush="White"/>
                                        </Grid>

                                        <Grid Grid.Column="1" Margin="8,0,0,0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="60"/>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>
                                            <TextBlock Grid.Column="0"
                              Text="Override"
                              Foreground="White"
                              FontSize="14"
                              VerticalAlignment="Center"/>
                                            <CheckBox x:Name="Override" 
Style="{StaticResource ModCreate_ToggleSwitch}"
IsChecked="False" Grid.Column="1"
HorizontalAlignment="Center"
VerticalAlignment="Center"/>
                                        </Grid>
                                    </Grid>
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                        <Border Grid.Row="2"
        CornerRadius="6"
        Padding="15,0,15,0">
                            <Grid>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="3*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">


                                        <Border x:Name="dropBorder" 
                                            BorderBrush="#666" 
                                            BorderThickness="2" 
                                            CornerRadius="5"
                                            Background="#2A2A2A"
                                            Height="100"
                                            Margin="0,0,0,0"
                                            VerticalAlignment="Top">
                                            <Grid>
                                                <!-- Placeholder text -->
                                                <TextBlock x:Name="dropPlaceholder"
                                Text="Drop .wad, .client, .wad.client files or folders here&#10;You can also drop a thumbnail image"
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center"
                                TextWrapping="Wrap"
                                TextAlignment="Center"
                                Foreground="#CCCCCC"
                                FontSize="14"
                                Visibility="Visible"/>
                                                <ScrollViewer>
                                                    <!-- Dropped files list -->
                                                    <ItemsControl x:Name="lstDroppedFiles"
              Visibility="Collapsed"
              Margin="4,4,0,4">
                                                        <ItemsControl.ItemTemplate>
                                                            <DataTemplate>
                                                                <Grid>
                                                                    <Border Margin="2"
Padding="2"
CornerRadius="2"
BorderThickness="1"
x:Name="itemBorder"
Background="#333"
BorderBrush="#555">
                                                                        <DockPanel LastChildFill="False">
                                                                            <TextBlock Text="{Binding Name}" Foreground="White" FontSize="11" Margin="0,0,5,0" DockPanel.Dock="Left"/>
                                                                            <Button Content="✖" Foreground="White" Background="Transparent" BorderThickness="0"
            FontSize="12" Padding="0" Margin="2,0,0,0" DockPanel.Dock="Right"
            Cursor="Hand" Click="RemoveFile_Click"/>
                                                                            <TextBlock Text="{Binding Size}" Foreground="#AAA" FontSize="11" Margin="0,0,5,0" DockPanel.Dock="Right"/>
                                                                        </DockPanel>
                                                                        <Border.Style>
                                                                            <Style TargetType="Border">
                                                                                <Setter Property="BorderBrush" Value="#555"/>
                                                                            </Style>
                                                                        </Border.Style>
                                                                    </Border>

                                                                    <!-- Yellow Glow Overlay -->
                                                                    <Border x:Name="glowOverlay"
                                                    Background="{DynamicResource AccentBrush}"
                                                    CornerRadius="2"
                                                    Opacity="0"
                                                    Margin="2"
                                                    IsHitTestVisible="False">
                                                                        <Border.Style>
                                                                            <Style TargetType="Border">
                                                                                <Style.Triggers>
                                                                                    <DataTrigger Binding="{Binding IsGlowing}" Value="True">
                                                                                        <DataTrigger.EnterActions>
                                                                                            <BeginStoryboard>
                                                                                                <Storyboard>
                                                                                                    <!-- Instant appear at 70% opacity -->
                                                                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                                           To="0.7" 
                                                                                           Duration="0:0:0" />
                                                                                                    <!-- Fade out over 2 seconds -->
                                                                                                    <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                                                                           From="0.7" 
                                                                                           To="0" 
                                                                                           Duration="0:0:1"
                                                                                           BeginTime="0:0:0" />
                                                                                                </Storyboard>
                                                                                            </BeginStoryboard>
                                                                                        </DataTrigger.EnterActions>
                                                                                    </DataTrigger>
                                                                                </Style.Triggers>
                                                                            </Style>
                                                                        </Border.Style>
                                                                    </Border>
                                                                </Grid>
                                                            </DataTemplate>
                                                        </ItemsControl.ItemTemplate>


                                                    </ItemsControl>
                                                </ScrollViewer>
                                            </Grid>
                                        </Border>
                                    </StackPanel>

                                    <Grid Grid.Column="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="*"/>
                                        </Grid.RowDefinitions>
                                        <Button x:Name="btnAddFiles"
                                                    Content="Add Files"
                                                    Background="Transparent"
                                                    Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                                                    BorderBrush="{DynamicResource AccentBrush}"
                                                    BorderThickness="2"
                                                    FontSize="14"
                                                    Margin="8,0,0,4"
                                                    Style="{DynamicResource ModCreate_highlight}"
                                                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                    HorizontalContentAlignment="Center"
                                                    VerticalContentAlignment="Center"
                                                    Cursor="Hand"
                                                    Click="AddFiles_Click">
                                            <Button.Resources>
                                                <Style TargetType="{x:Type Border}">
                                                    <Setter Property="CornerRadius" Value="6"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>

                                        <Button x:Name="btnClearFiles" Grid.Row="1"
                                                    Content="Clear Files"
                                                    Background="Transparent"
                                                    Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
                                                    BorderBrush="{DynamicResource AccentBrush}"
                                                    BorderThickness="2"
                                                    FontSize="14"
                                                    Margin="8,4,0,0"
                                                    Style="{DynamicResource ModCreate_highlight}"
                                                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch"
                                                    HorizontalContentAlignment="Center"
                                                    VerticalContentAlignment="Center"
                                                    Cursor="Hand"
                                                    Click="ClearFiles_Click">
                                            <Button.Resources>
                                                <Style TargetType="{x:Type Border}">
                                                    <Setter Property="CornerRadius" Value="6"/>
                                                </Style>
                                            </Button.Resources>
                                        </Button>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>
                    </Grid>
                </StackPanel>

                <!-- Bottom Actions -->
                <Border Grid.Row="2" Padding="0">
                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button x:Name="btnCreate"
        Content="Create Mod"
        Background="Transparent"
        Foreground="{DynamicResource {x:Static SystemColors.ControlTextBrushKey}}"
        BorderBrush="{DynamicResource AccentBrush}"
        BorderThickness="2" FontSize="15"
        Margin="0,0,0,15" Style="{DynamicResource ModCreate_highlight}"
        MinWidth="438" Height="30"
        HorizontalContentAlignment="Center"
        VerticalContentAlignment="Center"
        Cursor="Hand"
        Click="CreateMod_Click"
        IsEnabled="False">
                            <Button.Resources>
                                <Style TargetType="Border">
                                    <Setter Property="CornerRadius" Value="6"/>
                                </Style>
                            </Button.Resources>
                        </Button>



                    </StackPanel>

                </Border>
                <TextBlock x:Name="txtStatus"
                               Margin="0,0,0,10" 
                               FontWeight="Bold" 
                               HorizontalAlignment="Center"
                               Foreground="White"
                               FontSize="14"/>
            </Grid>
        </Border>
    </Grid>
</UserControl>