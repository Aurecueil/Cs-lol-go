<UserControl x:Class="ModManager.HierarchyElementEditor"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#80000000">
    <Grid>
        <Border Width="400" Height="300"
                Background="{DynamicResource BackgroundBrush}"
                CornerRadius="12"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Top Bar -->
                <Border Grid.Row="0"
                        Background="{DynamicResource AccentBrush}"
                        CornerRadius="12,12,0,0">
                    <Grid>
                        <TextBlock Text="Edit Settings"
                                   FontSize="18"
                                   FontWeight="Bold"
                                   Foreground="White"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="❌"
                                   Foreground="White"
                                   FontSize="15"
                                   Padding="8"
                                   HorizontalAlignment="Right"
                                   VerticalAlignment="Center"
                                   Cursor="Hand"
                                   MouseLeftButtonDown="Close_Click"/>
                    </Grid>
                </Border>

                <!-- Settings Form -->
                <StackPanel Grid.Row="1"
                            Margin="20"
                            VerticalAlignment="Top">

                    <!-- Override -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Override:" Width="100" VerticalAlignment="Center"/>
                        <TextBox x:Name="OverrideBox"
                                 Width="100"
                                 TextChanged="OverrideBox_TextChanged"/>
                    </StackPanel>

                    <!-- Priority -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Priority:" Width="100" VerticalAlignment="Center"/>
                        <TextBox x:Name="PriorityBox"
                                 Width="100"
                                 TextChanged="PriorityBox_TextChanged"/>
                    </StackPanel>

                    <!-- Random -->
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="Random:" Width="100" VerticalAlignment="Center"/>
                        <CheckBox x:Name="RandomCheck" Unchecked="RandomCheck_Checked" Checked="RandomCheck_Checked"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</UserControl>
