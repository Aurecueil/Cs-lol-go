<UserControl x:Class="ModManager.ModListEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="{DynamicResource ModListEntryHeight}" MinWidth="450">
    <Border x:Name="EntryBorder" CornerRadius="6" Margin="{DynamicResource ModListEntryMargin}">
        <Grid>
            <!-- Background color -->
            <Border x:Name="BGBorder" Background="#FF2A2A2A" CornerRadius="6" />
            
            <Border x:Name="BackgroundBorder"
        CornerRadius="6"
        ClipToBounds="True"/>

            <Border x:Name="StatusBorder" Background="Transparent" CornerRadius="6" Opacity="0.15"/>
            <Border x:Name="StatusBorderBorder" BorderBrush="Transparent" BorderThickness="2" CornerRadius="3" Opacity="0.8"/>

            <Grid x:Name="det_grid">
            <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="200" MaxWidth="250"/>
                <!-- First column (more flexible) -->
                    <ColumnDefinition Width="*" />
                <!-- Middle content with fixed width       155              -->
                    <ColumnDefinition Width="*"  MinWidth="250" MaxWidth="250" /> 
                    <!-- Last column (more flexible) -->
            </Grid.ColumnDefinitions>


            
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center" 
                        Grid.Column="0"  x:Name="elements1"
                        Margin="0,0,12,0">
                <CheckBox x:Name="ActiveCheckbox" 
          Style="{StaticResource CustomCheckBoxStyle}" 
          VerticalAlignment="Center" 
          Margin="0,0,8,0"
          Checked="ActiveCheckbox_Checked"
          Unchecked="ActiveCheckbox_Unchecked"/>
                <TextBlock x:Name="EntryName"
                           Foreground="White"
                           FontWeight="SemiBold"
                           FontSize="14"
                           VerticalAlignment="Center"
                           TextTrimming="CharacterEllipsis"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" Panel.ZIndex="20"
                        HorizontalAlignment="Right" x:Name="elements2"
                        VerticalAlignment="Bottom"
                        Grid.Column="2"
                        Margin="8,0,0,0">


                    <ComboBox Grid.ColumnSpan="3" Panel.ZIndex="10" Width="120"
x:Name="ImportOverrideComboBox"
Style="{StaticResource StyledComboBox}"
SelectedIndex="0" Visibility="Collapsed" SelectionChanged="ShowSelectedLayerSetting"
Margin="0,0,0,0">


                    </ComboBox>
                    <!-- Mod-only actions (Collapsed by default) -->
                <Button x:Name="FixingIcon" Style="{StaticResource roundHighlight}"
        ToolTip="Fixing"
        Cursor="Hand" Click="Fixer_settings_panel_open"
        BorderThickness="0"
        Background="Transparent"
        Visibility="Collapsed">
                    <TextBlock Text="🔧" 
               Style="{StaticResource IconTextBlockStyle}" 
               Foreground="White" 
               FontSize="15" 
               Padding="8" />
                </Button>


                <Button x:Name="ExportIcon" Style="{StaticResource roundHighlight}"
        ToolTip="Export"
        Cursor="Hand" Click="Export_Item"
        BorderThickness="0"
        Background="Transparent"
        Visibility="Collapsed">
                    <TextBlock Text="📄" 
               Style="{StaticResource IconTextBlockStyle}" 
               Foreground="White"
               FontSize="15" 
               Padding="8" />
                </Button>

                <Button x:Name="ModHandlingIcon" Style="{StaticResource roundHighlight}"
        ToolTip="Mod Handling"
        Cursor="Hand" Click="Open_details_page"
        BorderThickness="0"
        Background="Transparent">
                    <TextBlock Text="✏️" 
               Style="{StaticResource IconTextBlockStyle}" 
               Foreground="White" 
               FontSize="15" 
               Padding="8" />
                </Button>

                <Button x:Name="DeleteIcon" Style="{StaticResource roundHighlight}"
        ToolTip="Delete" Margin="0,0,5,0"
        Cursor="Hand" Click="Delete_click_clicked"
        BorderThickness="0"
        Background="Transparent">
                    <TextBlock Text="❌" 
               Style="{StaticResource IconTextBlockStyle}" 
               Foreground="White" 
               FontSize="15" 
               Padding="8" />
                </Button>


            </StackPanel>

            <StackPanel Grid.Column="1"
Panel.ZIndex="0"
VerticalAlignment="Bottom" x:Name="elements3"
HorizontalAlignment="Center"
Margin="8,0,8,0">
                    <TextBlock x:Name="DetailsText"
   Foreground="#CCCCCC"
   FontSize="12"
   VerticalAlignment="Center"
   HorizontalAlignment="Center"
   TextAlignment="Center"
   TextWrapping="Wrap"
   TextTrimming="CharacterEllipsis"
   Visibility="Collapsed"/>
                </StackPanel>
                
                
                
                
            </Grid>
        </Grid>
    </Border>
</UserControl>