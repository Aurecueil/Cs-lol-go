<UserControl x:Class="ModManager.RFModEntry"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="{DynamicResource ModListEntryHeight}" MinWidth="350">
    <Border x:Name="EntryBorder" CornerRadius="6" Margin="{DynamicResource ModListEntryMargin}">
        <Grid>
            <!-- Background color -->
            <Border x:Name="BGBorder" Background="#FF2A2A2A" CornerRadius="6" />

            <!-- Background image fills entire Border -->
            <Border x:Name="BackgroundBorder"
        CornerRadius="6"
        ClipToBounds="True"/>


            <Grid x:Name="det_grid">
            <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" MinWidth="200" MaxWidth="250"/>
                <!-- First column (more flexible) -->
                    <ColumnDefinition Width="*" />
                <!-- Middle content with fixed width       155              -->
                    <ColumnDefinition Width="*"  MinWidth="130" MaxWidth="250" /> 
                    <!-- Last column (more flexible) -->
            </Grid.ColumnDefinitions>


            

            <!-- Left: Checkbox + Name -->
            <StackPanel Orientation="Horizontal"
                        VerticalAlignment="Center" 
                        Grid.Column="0" 
                        Margin="0,0,12,0">
                
                <TextBlock x:Name="EntryName"
                           Foreground="White"
                           FontWeight="SemiBold" Margin="30,0,0,0"
                           FontSize="14"
                           VerticalAlignment="Center"
                           TextTrimming="CharacterEllipsis"/>
            </StackPanel>

            <!-- Center: Details (for expanded view) -->
            <TextBlock x:Name="DetailsText"
           Grid.Column="1"
           Foreground="#CCCCCC"
           FontSize="12"
           VerticalAlignment="Center"
           HorizontalAlignment="Center"
           TextAlignment="Center"
           TextWrapping="Wrap"
           TextTrimming="CharacterEllipsis"
           Margin="8,0,8,0"/>


            <!-- Right: Action Icons -->
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        Grid.Column="2"
                        Margin="8,0,0,0">

                

                <Button x:Name="DeleteIcon" Style="{StaticResource roundHighlight}"
        ToolTip="Delete" Margin="0,0,15,0"
        Cursor="Hand"
        BorderThickness="0"
        Background="Transparent">
                    <TextBlock Text="DL" x:Name="dl_button"
               Style="{StaticResource IconTextBlockStyle}" 
               Foreground="White" 
               FontSize="15" 
               Padding="8" />
                </Button>


            </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>