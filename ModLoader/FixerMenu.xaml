<UserControl x:Class="ModManager.FixerUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Background="#80000000"
             d:DesignHeight="600" d:DesignWidth="500"
             Foreground="White">

    <UserControl.Resources>
        <Style x:Key="BackupButtonStyle" TargetType="Button">
            <Setter Property="Height" Value="25"/>
            <Setter Property="Width" Value="70"/>
            <Setter Property="Background" Value="#333"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>

            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}"
                            CornerRadius="4">

                            <ContentPresenter HorizontalAlignment="Center" 
                                          VerticalAlignment="Center"/>
                        </Border>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1A1A1A"/>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="LogRichTextBoxStyle" TargetType="RichTextBox">
            <Setter Property="Background" Value="#1E1E1E"/>
            <Setter Property="BorderBrush" Value="#444"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="IsReadOnly" Value="True"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>


            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="RichTextBox">
                        <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        SnapsToDevicePixels="True">
                            <ScrollViewer x:Name="PART_ContentHost" 
                                  Focusable="false"
                                  HorizontalScrollBarVisibility="Hidden" 
                                  VerticalScrollBarVisibility="Hidden"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="ComboBox" x:Key="StyledComboBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#FF252525"/>
            <Setter Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="True"/>
            <Setter Property="IsEditable" Value="True"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Grid>
                            <Border x:Name="Border"
                            Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="5"
                            SnapsToDevicePixels="True">
                                <Grid>
                                    <!-- Editable TextBox -->
                                    <TextBox x:Name="PART_EditableTextBox"
                                     Background="Transparent"
                                     BorderThickness="0" 
                                     Foreground="White"
                                     VerticalAlignment="Center"
                                     Margin="10,0,25,0"/>

                                    <!-- Dropdown Toggle Button -->
                                    <ToggleButton Name="ToggleButton"
                                          IsChecked="{Binding Path=IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                          ClickMode="Press" Focusable="False"
                                          Background="Transparent" BorderThickness="0"
                                          HorizontalAlignment="Right" Width="20">
                                        <Path Data="M0,0 L4,4 L8,0" Stroke="White" StrokeThickness="1" 
                                      HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </ToggleButton>
                                </Grid>
                            </Border>

                            <!-- Popup for dropdown items -->
                            <Popup Name="Popup" Placement="Bottom"
                           IsOpen="{TemplateBinding IsDropDownOpen}"
                           AllowsTransparency="True"
                           Focusable="False"
                           PopupAnimation="Fade">
                                <Grid Name="DropDown" SnapsToDevicePixels="True" MinWidth="{TemplateBinding ActualWidth}" MaxHeight="200">
                                    <Border x:Name="DropDownBorder"
                                    Background="#FF252525"
                                    BorderThickness="1" 
                                    BorderBrush="{DynamicResource AccentBrush}"
                                    CornerRadius="5">
                                        <ScrollViewer Margin="4" SnapsToDevicePixels="True">
                                            <StackPanel IsItemsHost="True" KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Border>
                                </Grid>
                            </Popup>
                        </Grid>

                        <ControlTemplate.Triggers>
                            <Trigger Property="IsEnabled" Value="false">
                                <Setter TargetName="Border" Property="Opacity" Value="0.6"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


        <Style x:Key="CustomCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Grid Background="Transparent" Height="30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="30"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>
                            <Border x:Name="CheckboxBorder" Width="22" Height="22"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    CornerRadius="5" HorizontalAlignment="Left" VerticalAlignment="Center">
                                <Path x:Name="CheckMark" Data="M 3,10 L 8,15 L 18,4"
                                      Stroke="White" StrokeThickness="2" StrokeLineJoin="Round"
                                      Stretch="None" HorizontalAlignment="Center" VerticalAlignment="Center"
                                      Opacity="0"/>
                            </Border>
                            <ContentPresenter Grid.Column="1" VerticalAlignment="Center" Margin="5,0,0,0"/>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckboxBorder" Property="Background" Value="{DynamicResource AccentBrush}"/>
                                <Setter TargetName="CheckboxBorder" Property="BorderBrush" Value="{DynamicResource AccentBrush}"/>
                                <Setter TargetName="CheckMark" Property="Opacity" Value="1"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="CheckboxBorder" Property="Opacity" Value="0.5"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="ExpanderToggleStyle" TargetType="ToggleButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}" Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <ContentPresenter Grid.Column="0" Content="{TemplateBinding Content}" 
                                                  VerticalAlignment="Center" TextElement.FontWeight="Bold" TextElement.FontSize="14"/>
                                <TextBlock x:Name="Arrow" Grid.Column="1" Text="▼" Foreground="{DynamicResource AccentBrush}"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Arrow" Property="Text" Value="▲"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#1FFFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <Border Width="500" Height="600" x:Name="MainBorder"
            Background="#FF1E1E1E"
            CornerRadius="6"
            BorderBrush="{DynamicResource AccentBrush}"
            BorderThickness="2"
            HorizontalAlignment="Center"
            VerticalAlignment="Center">


        <Grid Margin="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>


            <Border x:Name="TopazBorder"
        Panel.ZIndex="99"
        Grid.RowSpan="2"
        Width="58"
        Height="64"
        HorizontalAlignment="Left"
        VerticalAlignment="Top" />



            <Border Grid.Row="0" Background="{DynamicResource AccentBrush}" CornerRadius="4,4,0,0" Padding="10">
                <TextBlock Text="Topaz MOD FIXER" FontWeight="Bold" Foreground="White" FontSize="16" HorizontalAlignment="Center"/>
            </Border>

            <Button x:Name="CloseButton"
        Style="{StaticResource IconButtonStyle}"
        ToolTip="Close"
        HorizontalAlignment="Right"
        VerticalAlignment="Center"
        Margin="5"
        Click="Cancel_Click">
                <TextBlock Text="❌"
               Foreground="LightGray"
               Style="{StaticResource IconTextBlockStyle}"
               Margin="0,-4,0,0"/>

            </Button>


            <Grid Grid.Row="1" Margin="15,10,15,0" x:Name="SettingsView">
                <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="0,0,5,0">
                    <StackPanel>

                        <TextBlock Text="Champion &amp; Skin" FontSize="14" Foreground="Gray" Margin="0,0,0,5"/>
                        <Border Background="#252525" CornerRadius="5" BorderBrush="#444" BorderThickness="1" Padding="10">
                            <StackPanel>
                                <Grid Margin="0,0,0,10">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Character" VerticalAlignment="Center" Foreground="White"/>
                                    <ComboBox x:Name="cmbCharacter"
          Grid.Column="1"
          Style="{StaticResource StyledComboBox}"
          IsEditable="True"
          StaysOpenOnEdit="True"
          IsTextSearchEnabled="True"
          Loaded="cmbCharacter_Loaded"/>


                                </Grid>

                                <Grid Margin="0,0,0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="100"/>
                                        <ColumnDefinition Width="80"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Text="Skin ID" VerticalAlignment="Center" Foreground="White"/>

                                    <TextBox x:Name="txtSkinNumber" 
         Grid.Column="1" Height="30" Margin="0,0,10,0"
         Background="#1A1A1A" Foreground="White" BorderBrush="Gray" BorderThickness="1"
         VerticalContentAlignment="Center" Padding="5" PreviewKeyDown="TextBox_PreviewKeyDown"
         Text="{Binding SkinNumberValue}" DataObject.Pasting="TextBox_Pasting"
         PreviewTextInput="NumberValidationTextBox"/>

                                    <TextBox x:Name="txtSkinNumberProp" IsReadOnly="True" Focusable="False"
Grid.Column="1" Height="30" Margin="0,0,10,0" Visibility="{Binding ElementName=chkAllSkins, Path=IsChecked, Converter={StaticResource BoolToVis}}"
Background="#1A1A1A" Foreground="White" BorderBrush="Gray" BorderThickness="1"
VerticalContentAlignment="Center" Padding="5"
Text="-"/>

                                    <CheckBox x:Name="chkAllSkins" Grid.Column="2" Content="All Available Skins (for chromas)" Margin="20,0,0,0"
                                              Style="{StaticResource CustomCheckBoxStyle}"/>
                                </Grid>

                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <CheckBox x:Name="chkBinsless" Grid.Column="0" Content="Binless" ToolTip="Assets only mod"
                                              Style="{StaticResource CustomCheckBoxStyle}"/>
                                    <CheckBox x:Name="chkSmallMod" IsEnabled="False" Grid.Column="1" Content="'Small Mod'"  Style="{StaticResource CustomCheckBoxStyle}" ToolTip="Will only verify paths for not included assets, instead of puting them in mod"/>

                                    <CheckBox x:Name="chkNoSkinLight" Grid.Column="2" Content="Apply to all skins" IsChecked="True"
                                              Style="{StaticResource CustomCheckBoxStyle}" Visibility="Visible"/>

                                </Grid>
                            </StackPanel>
                        </Border>

                        <Separator Background="#333" Margin="0,15"/>

                        <Border Background="#252525" CornerRadius="5" BorderBrush="#444" BorderThickness="1">
                            <StackPanel>
                                <ToggleButton x:Name="btnToggleAdvanced" Content="Advanced Options" 
                                              Style="{StaticResource ExpanderToggleStyle}"
                                              IsChecked="False" Click="ToggleAdvanced_Click"/>

                                <StackPanel x:Name="pnlAdvancedContent" Visibility="Collapsed" Margin="10,0,10,10">

                                    <Grid Margin="0,0,0,10">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="*"/>
                                            <ColumnDefinition Width="10"/>
                                            <ColumnDefinition Width="*"/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="0">
                                            <TextBlock Text="Sounds" Foreground="Gray" Margin="0,0,0,2"/>
                                            <ComboBox x:Name="cmbSound" Style="{StaticResource StyledComboBox}">
                                                <ComboBoxItem Content="Auto" IsSelected="True"/>
                                                <ComboBoxItem Content="Include"/>
                                                <ComboBoxItem Content="Exclude"/>
                                            </ComboBox>
                                        </StackPanel>

                                        <StackPanel Grid.Column="2">
                                            <TextBlock Text="Animations" Foreground="Gray" Margin="0,0,0,2"/>
                                            <ComboBox x:Name="cmbAnim" Style="{StaticResource StyledComboBox}">
                                                <ComboBoxItem Content="Auto" IsSelected="True"/>
                                                <ComboBoxItem Content="Include"/>
                                                <ComboBoxItem Content="Exclude"/>
                                            </ComboBox>
                                        </StackPanel>
                                    </Grid>

                                    <UniformGrid Columns="2">
                                        <CheckBox x:Name="chkKeepFolder" Content="Pack into .wad.client" Style="{StaticResource CustomCheckBoxStyle}"/>
                                        <CheckBox x:Name="chkKeepSFX" Content="Keep sfx_events.bnk" Style="{StaticResource CustomCheckBoxStyle}"/>
                                        <CheckBox x:Name="chkKeepIcons" Content="Keep Icons if mod has any" Style="{StaticResource CustomCheckBoxStyle}" IsChecked="True"/>
                                        <CheckBox x:Name="chkKeepUI" Content="Keep UI.wad" Style="{StaticResource CustomCheckBoxStyle}" IsChecked="True"/>
                                        <CheckBox x:Name="chkAddStuff" Content="Keep bonus Stuff" Style="{StaticResource CustomCheckBoxStyle}" IsChecked="True"/>
                                        <CheckBox x:Name="chkKillStatic" Grid.Column="1" Content="Kill Static Mats"  Style="{StaticResource CustomCheckBoxStyle}" ToolTip="outdated static mats can often crash mods, but some mod look ass without them"/>
                                        <Grid Height="30">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                            </Grid.ColumnDefinitions>

                                            <!-- Content -->
                                            <Grid Grid.Column="1" Margin="5,0,0,0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto"/>
                                                    <ColumnDefinition Width="*"/>
                                                    <ColumnDefinition Width="40"/>
                                                </Grid.ColumnDefinitions>

                                                <!-- Label -->
                                                <TextBlock Text="Bin Fallback" ToolTip="If no amtching bin, fixerr will use bin that has bin with name similar in at least x %"
                   VerticalAlignment="Center"
                   Foreground="White"
                   Margin="0,0,8,0"/>

                                                <!-- Slider -->
                                                <Slider x:Name="sliderValue"
                Grid.Column="1"
                Minimum="10"
                Maximum="100"
                Value="80"
                Height="18"
                VerticalAlignment="Center"
                TickFrequency="10"
                IsSnapToTickEnabled="True"
                Foreground="{DynamicResource AccentBrush}"/>

                                                <!-- Value display -->
                                                <TextBlock Grid.Column="2"
                   Text="{Binding Value, ElementName=sliderValue, StringFormat={}{0:0}%}"
                   VerticalAlignment="Center"
                   Foreground="Gray"
                   HorizontalAlignment="Right"/>
                                            </Grid>
                                        </Grid>

                                    </UniformGrid>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <Separator Background="#333" Margin="0,15"/>

                        <TextBlock Text="Manifest (use older gamefiles to files that are missing in LIVE)" FontSize="14" Foreground="Gray" Margin="0,0,0,5"/>
                        <Border Background="#252525" CornerRadius="5" BorderBrush="#444" BorderThickness="1" Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="3*"/>
                                </Grid.ColumnDefinitions>

                                <CheckBox x:Name="chkManifest" Grid.Column="0" Content="Enable" 
                                          Style="{StaticResource CustomCheckBoxStyle}" VerticalAlignment="Center" Margin="0,0,10,0"/>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,0">
                                    <ComboBox x:Name="cmbManifestVersion"
          Grid.Column="0"
          Style="{StaticResource StyledComboBox}"
          IsEditable="True" IsEnabled="{Binding IsChecked, ElementName=chkManifest}"
          StaysOpenOnEdit="True"
          IsTextSearchEnabled="True"
          Loaded="cmbManifestVersion_Loaded"/>



                                </StackPanel>


                                <CheckBox x:Name="chkManifestLang" Grid.Column="2" Content="Lang" Visibility="Collapsed"
          Style="{StaticResource CustomCheckBoxStyle}" VerticalAlignment="Center" Margin="0,0,10,0"/>

                                <StackPanel Grid.Column="3" VerticalAlignment="Center" Margin="10,0" Visibility="Collapsed">
                                    <ComboBox x:Name="cmbManifestLanguage" Style="{StaticResource StyledComboBox}" Height="25" IsEnabled="{Binding IsChecked, ElementName=chkManifest}"/>


                                </StackPanel>
                            </Grid>
                        </Border>

                        <Separator Background="#333" Margin="0,15"/>

                        <TextBlock Text="Backup System" FontSize="14" Foreground="Gray" Margin="0,0,0,5"/>
                        <Border Background="#252525" CornerRadius="5" BorderBrush="#444" BorderThickness="1" Padding="10">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>

                                <StackPanel Grid.Column="0" VerticalAlignment="Center">
                                    <TextBlock x:Name="txtBackupState" Text="No Backup" Foreground="#888" FontWeight="Bold"/>
                                    <TextBlock Text="Found" FontSize="10" Foreground="#555"/>
                                </StackPanel>

                                <StackPanel Grid.Column="2" Orientation="Horizontal">
                                    <Button x:Name="btnCreateBackup" Content="Create" Height="25" Width="70"
                                            Background="#333" Foreground="White" BorderBrush="Gray" BorderThickness="1"
                                            Click="BackupAction_Click" Style="{StaticResource BackupButtonStyle}">
                                    </Button>

                                    <StackPanel x:Name="pnlBackupControls" Orientation="Horizontal" Visibility="Collapsed">
                                        <Button Content="Restore" Height="25" Width="60" Margin="0,0,5,0"
                                                Background="#1E331E" Foreground="LightGreen" BorderBrush="Green" BorderThickness="1"
                                                Click="BackupAction_Click" Style="{StaticResource BackupButtonStyle}">
                                        </Button>
                                        <Button Content="Delete" Height="25" Width="40"
                                                Background="#331E1E" Foreground="Salmon" BorderBrush="Red" BorderThickness="1"
                                                Click="BackupAction_Click" Style="{StaticResource BackupButtonStyle}">
                                        </Button>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <Rectangle Height="20"/>
                    </StackPanel>
                </ScrollViewer>
            </Grid>

            <Grid Grid.Row="1" Margin="15" x:Name="OutputView" Visibility="Collapsed" Panel.ZIndex="10" Background="#FF252525">
                <Grid.RowDefinitions>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="5"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="File OP Log" Foreground="#999" FontSize="11" Margin="0,0,0,5" FontWeight="SemiBold"/>

                    <RichTextBox x:Name="txtLogUpper" 
             Grid.Row="1" 
             Style="{StaticResource LogRichTextBoxStyle}">
                        <FlowDocument />
                    </RichTextBox>
                </Grid>

                <GridSplitter Grid.Row="1" Height="5" HorizontalAlignment="Stretch" Background="Transparent" VerticalAlignment="Center" ResizeBehavior="PreviousAndNext"/>

                <Grid Grid.Row="2">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <TextBlock Text="Main Log" Foreground="White" FontSize="11" Margin="0,5,0,5" FontWeight="SemiBold"/>
                    <Grid Grid.Row="2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <RichTextBox x:Name="txtLogLower" 
             Grid.Row="1" 
             Style="{StaticResource LogRichTextBoxStyle}">
                            <FlowDocument />
                        </RichTextBox>
                    </Grid>


                </Grid>

                <Grid Grid.Row="3" Margin="0,15,0,0" Visibility="Collapsed">
                    <Grid>
                        <ProgressBar x:Name="progressBar" Height="18" Value="0" Maximum="100" 
                         Background="#2D2D2D" BorderThickness="0" Foreground="{DynamicResource AccentBrush}"/>

                        <TextBlock x:Name="txtProgress" Text="Initializing..." 
                       HorizontalAlignment="Center" VerticalAlignment="Center" 
                       Foreground="White" FontSize="10" FontWeight="SemiBold"
                       IsHitTestVisible="False"/>
                    </Grid>
                </Grid>
            </Grid>

            <Grid Grid.Row="2" Margin="15,0,15,15">
                <Button x:Name="btnStart"
        Content="START FIXER"
        Height="40"
        FontSize="14"
        Style="{StaticResource AccentOutlineHighlightButton}"
        Click="StartFixer_Click"/>


            </Grid>

            <Grid Grid.Row="2" Margin="15,0,15,15" x:Name="close"  Visibility="Collapsed">
                <Button Content="Fixing in progress" x:Name="close_txt"
        Height="40" IsEnabled="False"
        FontSize="14"
        Style="{StaticResource AccentOutlineHighlightButton}"
        Click="Cancel_Click"/>


            </Grid>

        </Grid>
    </Border>
</UserControl>